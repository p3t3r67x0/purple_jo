[Unit]
Description=NetScanner HTTP Header Extraction Worker
After=network-online.target rabbitmq-server.service
Wants=network-online.target

[Service]
Type=simple
EnvironmentFile=/etc/netscanner/extract_header.env
Environment=QUEUE_NAME=http_headers
Environment=WORKER_PROCESSES=4
Environment=CONCURRENCY=200
Environment=PREFETCH=400
Environment=REQUEST_TIMEOUT=5.0
Environment=SCHEMES=http,https
Environment=EXTRA_ARGS=
WorkingDirectory=/opt/git/purple_jo
ExecStart=/opt/git/purple_jo/tools/venv/bin/python \
    tools/extract_header.py serve \
    --postgres-dsn ${POSTGRES_DSN} \
    --rabbitmq-url ${RABBITMQ_URL} \
    --queue-name ${QUEUE_NAME} \
    --worker ${WORKER_PROCESSES} \
    --concurrency ${CONCURRENCY} \
    --prefetch ${PREFETCH} \
    --request-timeout ${REQUEST_TIMEOUT} \
    --schemes ${SCHEMES} \
    ${EXTRA_ARGS}
Restart=on-failure
RestartSec=5
User=netscanner
Group=netscanner

[Install]
WantedBy=multi-user.target
